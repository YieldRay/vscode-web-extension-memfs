{
  "name": "vscode-web-extension-memfs",
  "displayName": "MemFS - Filesystem provider",
  "description": "Filesystem provider based on IndexedDB",
  "version": "0.0.1",
  "publisher": "YieldRay",
  "private": true,
  "files": [
    "package.nls.json",
    "dist"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "activationEvents": [
    "onFileSystem:memfs"
  ],
  "main": "./extension.js",
  "browser": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memfs.workspaceInit",
        "title": "Setup Workspace",
        "category": "MemFS"
      },
      {
        "command": "memfs.reset",
        "title": "Delete Files",
        "category": "MemFS"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "memfs.workspaceInit",
          "when": "workbenchState != workspace"
        },
        {
          "command": "memfs.reset",
          "when": "workbenchState == workspace"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map"
  },
  "dependencies": {
    "@zenfs/core": "^2.4.1",
    "@zenfs/dom": "^1.2.5",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10"
  },
  "devDependencies": {
    "esbuild-register": "^3.6.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@types/node": "^22.18.8",
    "@types/vscode": "^1.104.0",
    "esbuild-loader": "^4.3.0"
  }
}
